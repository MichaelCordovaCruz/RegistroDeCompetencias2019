@model RegistroDeCompetencia2019.ViewModels.CreateHomeVM

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/Create.css" />

<div class="text-center">
  <!-- Images -->
  <div class="row p-3">
    <div class="col-4">
      <img src="~/images/logos/logo-coca-cola-actualversion2WEB.png" class="images" alt="...">
    </div>
    <div class="col-4">
      <img src="~/images/logos/logo-coca-cola-actual.png" class="images" alt="...">
    </div>
    <div class="col-4">
      <img src="~/images/logos/LOGO-INTERemprendeWEB.png" class="images" alt="...">
    </div>
  </div>
    <!-- Welcome Text -->
    <p class="text-center">
      Bienvenidos al registro de la competencia de ideas de negocio Inter Tiger Venture Competition. <br/>
      Favor de completer los encasillados y al final seleccionar el botón REGISTRO.  
    </p>
</div>

<form asp-controller="Home" asp-action="Create" method="POST">
  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="form-row">

    <!-- Estudiante Id -->
    <div class="form-group col-md-6">
      <label asp-for="Estudiante.Id" class="control-label"></label>
      <input asp-for="Estudiante.Id" class="form-control" />
      <span asp-validation-for="Estudiante.Id" class="text-danger"></span>
    </div>

    <!-- Etudiante Email -->
    <div class="form-group col-md-6">
      <label asp-for="Estudiante.Email" class="control-label"></label>
      <input asp-for="Estudiante.Email" class="form-control" />
      <span asp-validation-for="Estudiante.Email" class="text-danger"></span>
    </div>
  </div>

  <div class="form-row">

    <!-- Etudiante Nombre -->
    <div class="form-group col-md-4">
      <label asp-for="Estudiante.Nombre" class="control-label"></label>
      <input asp-for="Estudiante.Nombre" class="form-control" />
      <span asp-validation-for="Estudiante.Nombre" class="text-danger"></span>
    </div>

    <!-- Etudiante Apellido Paterno -->
    <div class="form-group col-md-4">
      <label asp-for="Estudiante.ApellidoPaterno" class="control-label"></label>
      <input asp-for="Estudiante.ApellidoPaterno" class="form-control" />
      <span asp-validation-for="Estudiante.ApellidoPaterno" class="text-danger"></span>
    </div>

    <!-- Etudiante Apellido Materno -->
    <div class="form-group col-md-4">
      <label asp-for="Estudiante.ApellidoMaterno" class="control-label"></label>
      <input asp-for="Estudiante.ApellidoMaterno" class="form-control" />
      <span asp-validation-for="Estudiante.ApellidoMaterno" class="text-danger"></span>
    </div>
  </div>

  <div class="form-row">

    <!-- Recinto -->
    <div class="form-group col-md-6">
      <label asp-for="Estudiante.RecintoId" class="control-label"></label>
      <div class="input-group mb-3">
        <select asp-for="Estudiante.RecintoId" class="custom-select form-control">
            <option disabled selected value="@null">Choose...</option>
            @foreach (var item in Model.Recintos)
            {
                <option value="@item.Id">@item.Nombre</option>
            }
        </select>
      </div>
      <span asp-validation-for="Estudiante.RecintoId" class="text-danger"></span>
    </div>
  </div>

  <div class="text-center">
      <p class="text-center">
        Al seleccionar el botón de registro, acceptas las reglas de la competencia, términos y condiciones de uso y política de privacidad, <br /> 
        Competencia organizada por la Universidad Interamericana de Puerto Rico y auspiciada por Coca-Cola Puerto Rico Bottlers, Inc. 
      </p>
  </div>

  <div class="form-row mb-5">

      <!-- <div class="form-group col-md-10">      
        <input type="checkbox" value="" class="" />  
        <label>He leido los reglamentos de la competencia y estoy de acuerdo con los mismos</label>
      </div> -->

      <!-- Submit Button -->
      <div class="form-group col-md-2">      
        <input type="submit" value="Registrar" class="btn btn-success" />  
      </div>
    </div>
</form>



